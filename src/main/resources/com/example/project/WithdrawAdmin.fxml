<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="600" spacing="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.WithdrawAdmin">

    <Label styleClass="title-label" text="Withdraw Admin">
        <font>
            <Font name="Calibri" size="25.0" />
        </font>
    </Label>

    <TextField fx:id="usernameField" prefHeight="40.0" prefWidth="300.0" promptText="Username" styleClass="textfield" />

    <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="300.0" promptText="Password" styleClass="textfield" />

    <Button fx:id="checkButton" onAction="#handleCheckCredentials" styleClass="button" text="Check Credentials" />

    <VBox fx:id="confirmBox" spacing="5" visible="false">
        <Button fx:id="confirmButton" onAction="#handleConfirmWithdraw" styleClass="button" text="Confirm Withdraw" />
    </VBox>

    <Label fx:id="statusLabel" styleClass="status-label" wrapText="true" />
</VBox>
