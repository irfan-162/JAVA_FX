<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="BOTTOM_CENTER" prefHeight="800.0" prefWidth="600" spacing="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.VoterManager">

    <Label styleClass="label" text="Voters List (Username Region)">
      <font>
         <Font name="ArtifaktElement-Black" size="12.0" />
      </font></Label>

    <ListView fx:id="voterListView" prefHeight="200" styleClass="list-view" />

    <HBox spacing="10">
        <Button onAction="#handleChangeRegion" styleClass="button" text="Change Region" />
        <Button onAction="#handleRemove" styleClass="button" text="Remove" />
    </HBox>

    <TextField fx:id="regionInput" promptText="Enter new region" />

    <Button fx:id="addRegionButton" onAction="#handleAddRegion" styleClass="button" text="Change" />

    <HBox alignment="CENTER" prefHeight="118.0" prefWidth="574.0" spacing="10">
        <children>
            <Button mnemonicParsing="false" onAction="#back" styleClass="button" text="Return" />
        </children>
    </HBox>
</VBox>
